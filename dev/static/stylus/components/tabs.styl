.tabs
    display inline-block
    & > div
        padding-top 20px

    ul
        &:after
            content ""
            display block
            clear both
            height 0.5px
            background $grey

        li
            display block
            float left
            cursor pointer

.tabs ul li.active
.tabs ul li.active:hover
    border-bottom 4px solid $deep-sky-blue
    color $black

.tabs-title
.tabs-text
    font-family 'Raleway'
    color $tabs-text

.tabs-title
    margin-right 25px
    padding 10px 0
    font-size 14px
    font-weight bold

.tabs-text
    font-size 16px
    line-height 24px