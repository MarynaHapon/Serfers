.tab-panels
    display inline-block
    font-family 'Raleway'
    color $tabs-text

    ul
        &:after
            content ""
            display block
            clear both
            height 1px
            background $grey

        li
            display block
            float left
            margin-right 25px
            padding 10px 0
            font-size 14px
            font-weight bold
            cursor pointer
            //&:hover
            &.active
                border-bottom 4px solid $deep-sky-blue
                color $black

    .panel
        display none
        padding-top 20px
        font-size 16px
        line-height 24px

        &.active
            display block