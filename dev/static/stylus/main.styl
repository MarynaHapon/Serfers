@import 'fonts.styl'
@import 'vars.styl'
@import 'libs.styl'
@import 'mixins.styl'

html
	line-height 1
	font-size 16px


body
	font-family 'Playfair Display'


h1,h2,h3,h4,h5,h6
	margin 0

h1,h2
	font-weight 400

ul,li
	margin 0
	padding 0
	list-style-type none

p
	margin 0

a
	//color black
	text-decoration none
	transition 0.3s

audio,
canvas,
iframe,
img,
svg,
video
	vertical-align middle


textarea
	resize none


section
	position relative


input,
select,
button
	outline none


*, *:before, *:after
	box-sizing border-box


	//	common styles
@import 'common_styles.styl'

	//	modules
@import 'modules/navigation.styl'
@import 'modules/header.styl'
@import 'modules/surfboards.styl'
@import 'modules/footer.styl'

	//	components
@import 'components/menu.styl'
@import 'components/caroucel.styl'
@import 'components/radio.styl'

	// pages
@import 'pages/index.styl'

	//  media
@import 'media.styl'