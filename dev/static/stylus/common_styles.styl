.wrapper
    width 100%
    max-width 1920px
    margin 0 auto
    overflow-x hidden

.inner
    max-width 1112px
    margin 0 auto
    padding 0 10px

.btn
    padding 14px 25px
    font-size 14px
    font-weight bold
    background-color $deep-sky-blue
    color $white
    font-family 'Montserrat'
    transition 0.3s

    &:hover
        background-color $school-bus-yellow
        color $black

.chapter
    position absolute
    text-align center
    font-family 'Montserrat'
    font-size 196px
    line-height 150px
    font-weight bold
    color $chapter

.sprite
    background-image url('../../static/img/general/spritesheet.png')
    background-repeat no-repeat








.sprite-sea
    width 16px
    height 16px
    background-position -25px -305px




