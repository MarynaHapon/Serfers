.navigation-wrapper
    position fixed
    top 30px
    width 100%
    z-index 100

.navigation
    display flex
    flex-direction row
    justify-content space-between
    align-items center
    width 100%
    max-width 1112px
    z-index 100

.logo
    font-family 'Montserrat'
    font-size 34px
    font-weight bold

    a
        color $logo

        &:hover
            color $logo-hover

.social
    display flex
    flex-direction row

.social-item
    padding 0 4px

    a
        display inline-flex
        justify-content center
        align-items center
        size(38px)
        border-radius 100%
        background-color $social-item-bg

        &:hover
            background-color $social-item-bg-hover

        img
            size(20px)


