.wrapper.section
        .inner
            .surfboards

                //.carousel.carousel-main
                    each link, alt in content.carousel
                        +carouselItem(alt, link)

                //.carousel.carousel-nav
                    each link, alt in content.carousel
                        +carouselItem(alt, link)

                .surfboard-btn-group
                    button.surfboard-btn.surfboard-btn--previous
                    button.surfboard-btn.surfboard-btn--next
                .surfboard-list

                    .surfboard-item
                        div.surfboard-item-left
                            .carousel.carousel-main
                                each link, alt in content.surfboardsItem1.img
                                    +carouselItem(alt, link)
                            .carousel.carousel-nav
                                each link, alt in content.surfboardsItem1.img
                                    +carouselItem(alt, link)


                        div.surfboard-item-right
                            h2.surfboard-title= content.surfboardsItem1.title
                            .radio-wrapper
                                include ../components/radio
                            .tab-panels
                                ul.tabs
                                    li.active(data-panel-name='panel11') DESCRIPTION
                                    li(data-panel-name='panel12') FEATURES
                                    li(data-panel-name='panel13') DIMENSIONS
                                #panel11.panel.active= content.surfboardsItem1.Description
                                #panel12.panel= content.surfboardsItem1.Features
                                #panel13.panel= content.surfboardsItem1.Dimensions
                            .price-btn-group
                                p.surfboard-price= content.surfboardsItem1.price
                                a.surfboard-btn-buy(href= content.surfboardsBtn.link)= content.surfboardsBtn.title



                    .surfboard-item
                        div.surfboard-item-left
                            .carousel.carousel-main
                                each link, alt in content.surfboardsItem1.img
                                    +carouselItem(alt, link)
                            .carousel.carousel-nav
                                each link, alt in content.surfboardsItem1.img
                                    +carouselItem(alt, link)


                        div.surfboard-item-right
                            h2.surfboard-title= content.surfboardsItem1.title
                            .radio-wrapper
                                include ../components/radio
                            .tab-panels
                                ul.tabs
                                    li.active(data-panel-name='panel21') DESCRIPTION
                                    li(data-panel-name='panel22') FEATURES
                                    li(data-panel-name='panel23') DIMENSIONS
                                #panel21.panel.active= content.surfboardsItem1.Description
                                #panel22.panel= content.surfboardsItem1.Features
                                #panel23.panel= content.surfboardsItem1.Dimensions
                            .price-btn-group
                                p.surfboard-price= content.surfboardsItem1.price
                                a.surfboard-btn-buy(href= content.surfboardsBtn.link)= content.surfboardsBtn.title


                    .surfboard-item


